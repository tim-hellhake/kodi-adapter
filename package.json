{
  "name": "kodi-adapter",
  "display_name": "Kodi",
  "version": "0.2.0",
  "description": "Show notifications on your media player",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tim-hellhake/kodi-adapter.git"
  },
  "author": "Tim Hellhake",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/tim-hellhake/kodi-adapter/issues"
  },
  "homepage": "https://github.com/tim-hellhake/kodi-adapter#readme",
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "index.js",
    "kodi-adapter.js",
    "manifest.json",
    "kodi-notifier.js"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "schema": {
      "type": "object",
      "required": [
        "address"
      ],
      "properties": {
        "address": {
          "type": "string",
          "title": "The address of your kodi system"
        },
        "messages": {
          "type": "array",
          "title": "Predefined messages",
          "items": {
            "type": "object",
            "title": "A predefined message",
            "required": [
              "name",
              "title",
              "message"
            ],
            "properties": {
              "name": {
                "type": "string",
                "title": "The name of the action"
              },
              "title": {
                "type": "string",
                "title": "The title of your message"
              },
              "message": {
                "type": "string",
                "title": "The content of your message"
              },
              "displaytime": {
                "type": "integer",
                "title": "The time in milliseconds the message should be shown"
              }
            }
          }
        }
      }
    }
  },
  "dependencies": {
    "fetch": "^1.1.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "eslint": "^6.5.1"
  }
}
